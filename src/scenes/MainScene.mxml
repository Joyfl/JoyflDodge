<?xml version="1.0" encoding="utf-8"?>
<joyflic:Scene xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:joyflic="kr.joyfl.joyflic.*">
	<fx:Script>
		
		<![CDATA[
			import mx.controls.Alert;
			
			override public function onResume() : void
			{
				trace( "Resume" );
			}
			
			private function onSingleModeButtonClick( e : MouseEvent ) : void
			{
				var gameScene : GameScene = new GameScene;
				sceneStack.pushScene( gameScene, {gameMode : GameMode.SINGLE} );
			}
			
			private function onChallengeModeButtonClick( e : MouseEvent ) : void
			{
				Alert.show( "아직 앙대요 고갱님" );
			}
		]]>
	</fx:Script>
	
	<joyflic:layout>
		<s:VerticalLayout />
	</joyflic:layout>
	
	<s:Button label="혼자 즐기기" click="onSingleModeButtonClick( event )" />
	<s:Button label="친구에게 도전하기" click="onChallengeModeButtonClick( event )" />
</joyflic:Scene>
